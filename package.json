{
  "name": "@douglasdong/ppteditor-types",
  "version": "2.4.0",
  "description": "PPTEditor V2 标准化类型定义库（支持V1兼容）- 增强版",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./v1-compat": {
      "types": "./dist/types/v1-compat-types.d.ts",
      "import": "./dist/types/v1-compat-types.js"
    },
    "./v2-standard": {
      "types": "./dist/types/v2-standard-types.d.ts",
      "import": "./dist/types/v2-standard-types.js"
    },
    "./adapters": {
      "types": "./dist/adapters/v1-v2-adapter.d.ts",
      "import": "./dist/adapters/v1-v2-adapter.js"
    },
    "./unified": {
      "types": "./dist/types/unified-types.d.ts",
      "import": "./dist/types/unified-types.js"
    },
    "./middleware": {
      "types": "./dist/middleware/version-middleware.d.ts",
      "import": "./dist/middleware/version-middleware.js"
    },
    "./utils": {
      "types": "./dist/utils/version-converter.d.ts",
      "import": "./dist/utils/version-converter.js"
    },
    "./extensions": {
      "types": "./dist/extensions/index.d.ts",
      "import": "./dist/extensions/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:types": "tsc --noEmit --project tsconfig.test.json",
    "test:adapters": "vitest run tests/adapters",
    "test:integration": "vitest run tests/integration",
    "test:compatibility": "vitest run tests/integration/compatibility.test.ts",
    "test:example": "tsc --noEmit example.ts",
    "test:all": "npm run test && npm run test:example",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "ppt",
    "editor",
    "typescript",
    "types",
    "presentation",
    "v1-compat",
    "v2-standard",
    "version-adapter",
    "migration"
  ],
  "author": "Xeonice",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "@types/node": "^20.0.0"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Xeonice/ppteditor-types.git"
  },
  "bugs": {
    "url": "https://github.com/Xeonice/ppteditor-types/issues"
  },
  "homepage": "https://github.com/Xeonice/ppteditor-types#readme"
}
